{
  "name": "@mchirico/dlog",
  "version": "1.0.8",
  "private": false,
  "description": "A Debug Logger",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Mike Chirico (https://mchirico.github.io/) <mchirico@gmail.com>",
  "license": "Apache License 2.0",
  "repository": "https://github.com/mchirico/dlog.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/mchirico"
  },
  "homepage": "https://github.com/mchirico/dlog",
  "bugs": "https://github.com/mchirico/dlog/issues",
  "keywords": [
    "dlog",
    "github"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest --coverage && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "pub": "npm publish --access public"
  },
  "dependencies": {
    "@types/lodash": "^4.14.155",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.9.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "standard": "^14.3.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.6.4"
  },
  "files": [
     "lib/**/*"
  ],
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
